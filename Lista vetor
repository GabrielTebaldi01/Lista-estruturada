/*exercicio numero 1*/


#include  <stdio.h>
#include <math.h>
#include<time.h>
#include <stdlib.h>

int main(){

int nota[30],i;
    
	
	
	for (i=0;i<=30;i++){
        printf("Informe a nota do aluno %d :",i+1);
        scanf("%d\n\n",&nota[i]);
    }
    
}



/*exercicio numero 2*/


#include  <stdio.h>
#include <math.h>
#include<time.h>
#include <stdlib.h>

int main(){
	
int numeroA;
    printf("Informe a quantidade de alunos avaliados :");
    scanf( "%d",&numeroA);//perguntar pq se as variaveis a baixo estiverem em cima nao roda


int nota[numeroA],i;
    
	
	
	for (i=0;i<=numeroA-1;i++){
        printf("Informe a nota do aluno %d :",i+1);
        scanf("%d\n\n",&nota[i]);
    }
    
}


/*exercicio numero 3(duvida nesse exercicio)*/



#include  <stdio.h>
#include <math.h>
#include<time.h>
#include <stdlib.h>

int main(){
	
	int dados [10], soma=0, i;
	
	
	for(i=0; i<=10; i++){
		printf("Digite um numero para soma: ");
		scanf("%f", &dados[i]);
		
		soma= soma + dados[i];
	}
	
	printf("Soma = %d", soma);
	
	

}


/*exercicio numero 4*/


#include  <stdio.h>
#include <math.h>
#include<time.h>
#include <stdlib.h>

int main(){
	
	char letras[30];
	int i;
	
	
	printf("Me informe 30 letras: ");
	fflush(stdin);
    fgets(letras,30,stdin);
    
    
	
	for (i = 29; i >=0; i--){
       printf(" A ordem inversa eh : %c\n",letras[i]);       
    }

}



/*exercicio numero 5*/


#include  <stdio.h>
#include <math.h>
#include<time.h>
#include <stdlib.h>
	
int main(){
    int numero[80], leitura = 0 , i=0;
    
	
	printf("Me informe um numero inteiro : ");
    scanf("%d",&leitura);
   
   
   do{
     
        printf ("Informe os numeros que irao ser alocados :");
        scanf("%d",&numero[i]);
        i++;
    }while(i <80); 
        
		
		for(i =0;i<80;i++){
        
		
		if(leitura == numero[i]){
        printf("Numero %d igual ao %d",numero[i],leitura);
        break;
        }
		
		else{
        printf("Nao existe numero igual a %d" ,leitura);
        break;
        }
        
		i++;
		
    }
    
    return 0;
    
}


/*exercicio numero 6*/


#include  <stdio.h>
#include <math.h>
#include<time.h>
#include <stdlib.h>
	
    float maior(float salario[100]){
    
	float maior = 0.0;
    
    for ( int i = 0; i <= 100; i++)
    {
        if (salario[i] > maior )
        {
           maior = (salario[i]);
        }
        
    }
    
    return maior;
}


int main (){
    
	int matricula[100];
    float salario[100],maior2;
    
	
	for (int i = 0; i <= 100; i++)
    {
       printf("Me informe a matricula do funcionario: ");
       scanf("%d",&matricula[i]);
       
	   printf("Me forneca o salario do funcionario: ");
       scanf("%f",&salario[i]);
    }
    
   maior2 = maior (salario);
    printf("O maior eh %.2f ",maior2);
}



/*exercicio numero 7*/


#include  <stdio.h>
#include <math.h>
#include<time.h>
#include <stdlib.h>
	
int main(){
   	
   	float cd[100],cpu10[100],cpu,cpuFinal[100];
    int i;
    
    
    for ( i = 0; i <=100; i++){
        printf("Me informe o valor do CD :");
        scanf("%f",&cd[i]);
         }


    printf("Qual valor de aumento: ");
    scanf("%f",&cpu);


    for ( i = 0; i <= 100; i++){
        cpuFinal[i]= cd[i]+(cd[i]*(cpu/100));
    }


    printf("Valor inicial\n\nValor com 10%%\n\nValor com %.2f%%\n",cpu);

    for ( i = 0; i <= 100; i++){
        printf("%.2f\t\t%.2f\t\t%.2f",cd[i], cpu10[i], cpuFinal[i]);
    }
   	
   	
	   return 0;
   	
   	  	
}


/*exercicio numero 8*/


#include  <stdio.h>
#include <math.h>
#include<time.h>
#include <stdlib.h>
	
int main(){
    
	int x, idade[x],soma,i;
    int maisVelha;
    float media;
    
    x = 100;
	soma = 0;
	maisVelha = 0;
	
	for ( i = 0; i < x; i++){
        printf("Me informe a idade da pessoa %d ",i);
        scanf("%d",&idade[i]);
    }
    
	
	for ( i = 0; i < x; i++){
        if (idade[i]>= maisVelha)
        {
            maisVelha=idade[i];
        }
        soma = soma + idade[i];
    }
    
	
	media = soma/x;
    printf("A media de idade eh %.2f\n",media);
  
    for ( i = 0; i < x; i++){
        
		if (idade[i] == maisVelha){
            printf("A pessoa mais velha tem %d anos e esta na posiÃ§ao %d\n",maisVelha,i);
        }
    }
    
    
    return 0;
    
}


