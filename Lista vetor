/*exercicio numero 1*/


#include  <stdio.h>
#include <math.h>
#include<time.h>
#include <stdlib.h>

int main(){

int nota[30],i;
    
	
	
	for (i=0;i<=30;i++){
        printf("Informe a nota do aluno %d :",i+1);
        scanf("%d\n\n",&nota[i]);
    }
    
}



/*exercicio numero 2*/


#include  <stdio.h>
#include <math.h>
#include<time.h>
#include <stdlib.h>

int main(){
	
int numeroA;
    printf("Informe a quantidade de alunos avaliados :");
    scanf( "%d",&numeroA);//perguntar pq se as variaveis a baixo estiverem em cima nao roda


int nota[numeroA],i;
    
	
	
	for (i=0;i<=numeroA-1;i++){
        printf("Informe a nota do aluno %d :",i+1);
        scanf("%d\n\n",&nota[i]);
    }
    
}


/*exercicio numero 3(duvida nesse exercicio)*/



#include  <stdio.h>
#include <math.h>
#include<time.h>
#include <stdlib.h>

int main(){
	
	int dados [10], soma=0, i;
	
	
	for(i=0; i<=10; i++){
		printf("Digite um numero para soma: ");
		scanf("%f", &dados[i]);
		
		soma= soma + dados[i];
	}
	
	printf("Soma = %d", soma);
	
	

}


/*exercicio numero 4*/


#include  <stdio.h>
#include <math.h>
#include<time.h>
#include <stdlib.h>

int main(){
	
	char letras[30];
	int i;
	
	
	printf("Me informe 30 letras: ");
	fflush(stdin);
    fgets(letras,30,stdin);
    
    
	
	for (i = 29; i >=0; i--){
       printf(" A ordem inversa eh : %c\n",letras[i]);       
    }

}



/*exercicio numero 5*/


#include  <stdio.h>
#include <math.h>
#include<time.h>
#include <stdlib.h>
	
int main(){
    int numero[80], leitura = 0 , i=0;
    
	
	printf("Me informe um numero inteiro : ");
    scanf("%d",&leitura);
   
   
   do{
     
        printf ("Informe os numeros que irao ser alocados :");
        scanf("%d",&numero[i]);
        i++;
    }while(i <80); 
        
		
		for(i =0;i<80;i++){
        
		
		if(leitura == numero[i]){
        printf("Numero %d igual ao %d",numero[i],leitura);
        break;
        }
		
		else{
        printf("Nao existe numero igual a %d" ,leitura);
        break;
        }
        
		i++;
		
    }
    
    return 0;
    
}


